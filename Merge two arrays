#include <stdio.h>
#include <stdlib.h>

int* mergeArrays(int a[], int n, int b[], int m) {
    int *res = malloc((n + m) * sizeof(int));
    for (int i = 0; i < n; i++) res[i] = a[i];
    for (int j = 0; j < m; j++) res[n + j] = b[j];
    return res;
}

int main() {
    int a[] = {1, 3, 5}, b[] = {2, 4, 6};
    int n = 3, m = 3;
    int *merged = mergeArrays(a, n, b, m);
    for (int i = 0; i < n + m; i++) printf("%d ", merged[i]);
    printf("\n");
    free(merged);
    return 0;
}
