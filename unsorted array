#include <stdio.h>

int findMissing(int arr[], int n) {
    int sum = 0, expected = n * (n + 1) / 2;
    for (int i = 0; i < n - 1; i++)
        sum += arr[i];
    return expected - sum;
}

int main() {
    int arr[] = {2, 3, 1, 5};
    int n = 5;
    printf("Missing element: %d\n", findMissing(arr, n));
    return 0;
}
