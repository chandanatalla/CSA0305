#include <stdio.h>

int linearSearch(int arr[], int n, int key) {
    for (int i = 0; i < n; i++)
        if (arr[i] == key) return i;
    return -1;
}

int binarySearch(int arr[], int l, int r, int key) {
    while (l <= r) {
        int m = l + (r - l) / 2;
        if (arr[m] == key) return m;
        if (arr[m] < key) l = m + 1;
        else r = m - 1;
    }
    return -1;
}

int main() {
    int arr[] = {1, 2, 4, 5, 6, 7};
    int n = sizeof(arr)/sizeof(arr[0]);
    int key = 5;

    int idx1 = linearSearch(arr, n, key);
    printf("Linear Search index: %d\n", idx1);

    int idx2 = binarySearch(arr, 0, n - 1, key);
    printf("Binary Search index: %d\n", idx2);

    return 0;
}
